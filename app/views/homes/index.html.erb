<% content_for :title do %>
  <%= @post.title %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <div class="row title">
        <h2><%= @post.title %></h2>
      </div>
      <div class="row byline">
        <div class="col-md-12">
          <%= image_tag @user.avatar, class: "img-circle" %>
          <%= link_to @user.username, @user %> on <%= @post.created_at.strftime("%A, %B %d, %Y at %l:%M %p") %>
        </div>
      </div>
      <div class="row post_body">
        <div class="col-md-12">
          <%= render partial: "posts/post", locals: { post: @post } %>   <!--calls _post partial; setting local variables in _post partial so that @post is not needed to render a post...needed for post#index -->
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 post_actions">
          <button class="btn btn-default glyphicon_button">
            <div class="glyph">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <div class="glyph_text">
                Read Comments
              </div>
            </div>
          </button>
          <button class="btn btn-default glyphicon_button">
            <div class="glyph">
              <span class="glyphicon glyphicon-cloud" aria-hidden="true"></span>
              <div class="glyph_text">
                Read Later
              </div>
            </div>
          </button>
          <button class="btn btn-default glyphicon_button third">
            <div class="glyph">
              <span class="glyphicon glyphicon-share-alt third_glyph" aria-hidden="true"></span>
              <div class="glyph_text">
                Share This Post
              </div>
            </div>
          </button>
        </div>  <!--post actions buttons-->
      </div>
    </div>

    <div class="col-xs-3" id="sidebar">
      <div class="row">
        <%= image_tag @user.avatar, class: "img-circle center-block img-responsive"%>
      </div>
      <div class="row username">
        <%= link_to @user.username, user_path(@user) %>
      </div>
      <div class="row user_social">
        <div class="col-md-12">
          <ul>
            <li><%= link_to "Twitter", "https://twitter.com/thedailyotter?lang=en" %></li>
            <li><%= link_to "Facebook", "https://www.facebook.com/DailyOtter/" %></li>
            <li><%= link_to "Instagram", "https://www.instagram.com/ponchan918/" %></li>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 ad">
          <%= image_tag "ad#{rand(1..6)}.jpg" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div id="sidebar_header">
            Sidebar section heading
          </div>
          <div id="sidebar_text">
            <%= @user.bio %>
          </div>
        </div>
      </div>

      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row edit_delete">
    <div class="col-md-9 make_new_post">
      <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary new_post_btn" if @post.owned_by? current_user %>
      <%= link_to "Delete this post", @post, method: :delete, class: "btn btn-danger new_post_btn" if @post.owned_by? current_user %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 make_new_post">
      <%= link_to "Make a new post", new_post_path, class: "btn btn-primary new_post_btn" if current_user %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="col-md-12" id="most_popular">
    <p>Most popular posts</p>
  </div>
  <div class="row" id="bottom_row">
    <% @most_popular.each do |post| %>
      <div class="col-md-3 popular">
        <span class="bottom_titles"><%= post.title %></span>
        <%= link_to post do %>
          <% image_tag post.image || post.user.avatar, class: "img-responsive center-block" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
