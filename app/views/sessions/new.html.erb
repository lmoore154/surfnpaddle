<div class="container">
  <div class="row">
    <h1>Login</h1>
  </div>
</div>

  <% if flash.any? %>
    <% flash.each do | klass, message | %>
    <div class="alert alert-<%= klass %>" role="alert">
      <p> <%= message %> </p>
    </div>
    <% end %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <%= simple_form_for :session, class: "form-horizontal" do |f| %>
        <%= f.input :username %>
        <%= f.input :password %>
        <div class="row login_button">
          <%= f.button :submit, "Login", class: "btn btn-primary" %>
          <%= link_to "Forgot password", forgot_path, class: "btn btn-default" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
