<div class="container">
  <div class="row">
    <h1>Login</h1>
  </div>
  </div>
    <% if flash.any? %>
      <% flash.each do | klass, message | %>
      <div class="alert alert-<%= klass %>" role="alert">
        <p> <%= message %> </p>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="container">
    <%= simple_form_for :session, class: "form-horizontal" do |f| %>
      <%= f.input :username %>
      <%= f.input :password %>
      <div class="row login_button">
        <%= f.button :submit, "Login", class: "btn btn-primary" %>
      </div>
      <% end %>
  </div>
</div>
